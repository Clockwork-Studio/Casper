{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<style>
 .site-logo {
 	max-height: 256px;
 	}
 .gh-head, .site-header-content {
    color: white;
    background: black;
	}
 .post-card {
    min-height: 120px;
 }
</style>

<div class="site-header-content">
            <img class="site-header-cover"
                src="https://clockworkstudios.net/content/images/2021/12/Dex-Clockwork-Black.png"
            />
    <h1 class="site-title">
        <img class="site-logo" src="https://clockworkstudios.net/content/images/2021/12/Dex-Clockwork-Black.png" alt="Clockwork" />
    </h1>
</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner posts">
        
        {{#get "posts" limit="all" filter="tag:dex+tag:clockwork+tag:hash-creature" order="title asc"}}
            {{#if posts}}
            <div class="post-feed">
                {{#foreach posts}}

                    {{!-- The tag below includes the markup for each post - partials/dex-card.hbs --}}
                    {{> "dex-card"}}

                {{/foreach}}
            </div>
            {{/if}}
        {{/get}}

        {{#get "posts" limit="all" filter="tag:dex+tag:clockwork+tag:-hash-creature+tag:hash-world" order="title asc"}}
            {{#if posts}}
                <div class="post-feed">
                    {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/dex-card.hbs --}}
                        {{> "dex-card"}}

                    {{/foreach}}
                </div>
            {{/if}}
        {{/get}}
    
        {{#get "posts" limit="all" filter="tag:dex+tag:clockwork+tag:-hash-creature+tag:-hash-world" order="title asc"}}
            {{#if posts}}
                <div class="post-feed">
                    {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/dex-card.hbs --}}
                        {{> "dex-card"}}

                    {{/foreach}}
                </div>
            {{/if}}
        {{/get}}

    </div>
</main>
